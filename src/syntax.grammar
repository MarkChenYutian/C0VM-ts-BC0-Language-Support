@top Program { Expression* }

@skip { space }

Expression {
  Line
  | BlockHeader
  | BlockEnder
  | Function
}

Function {
  FuncHeader Line* BlockEnder
}

Line {
  Byte+ Comment+ 
}

FuncHeader { "#<" Identifier ">" }

BlockHeader { @extend <Comment, "# int pool" | "# string pool" | "# function_pool" | "# native pool"> }

@tokens {
  Byte { $[A-Fa-f0-9]$[A-Fa-f0-9] }
  Identifier { $[A-Za-z_\-0-9]+ }
  Comment { "# " ![\n]* }
  space { $[ \n\t] }
  BlockEnder { "\n\n" }
}

